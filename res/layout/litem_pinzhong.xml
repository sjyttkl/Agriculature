<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
         />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item"
        android:text="@string/guifeili"
        android:textColor="#abcd67"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_item"
        android:layout_below="@id/tv_item"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/tv_item"
        android:layout_toRightOf="@id/iv_item"
        android:text="@string/descript_lizhi" />
   
</RelativeLayout>